# Auto detect text files and perform LF normalization
* text=auto

# Source code files - use LF
*.java text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Shell scripts - use LF
*.sh text eol=lf
gradlew text eol=lf

# Windows batch files - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.jar binary
*.class binary
